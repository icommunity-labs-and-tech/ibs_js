{
  "name": "ibs_js",
  "version": "0.1.1",
  "description": "The IBS SDK for browsers",
  "main": "./dist/index.js",
  "scripts": {
    "prepublishOnly": "npm run compile",
    "compile": "npm run clean && tsc -p .",
    "watch": "tsc -w -p .",
    "clean": "rm -rf dist",
    "build-package": "tsc",
    "build-bundle": "browserify dist/index.js --standalone ibsjs | uglifyjs > public/ibs.js",
    "build": "npm run build-package && mkdir -p public && npm run build-bundle",
    "lint": "tslint -c tslint.json src/**/*.ts",
    "start": "node --loader ts-node/esm ./src/index.ts",
    "test": ""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/icommunity-labs-and-tech/ibs.js.git"
  },
  "keywords": [],
  "author": "pablocumpian",
  "license": "Apache-2.0",
  "files": [
    "./dist/*",
    "./dist/client/*"
  ],
  "typings": "./dist/index.d.ts",
  "devDependencies": {
    "@types/node": "^20.10.5",
    "browserify": "^17.0.0",
    "ts-node": "^10.9.2",
    "tslint": "^6.1.3",
    "typescript": "^5.3.3",
    "uglify-js": "^3.17.4"
  }
}
